<h1>Create a New Event</h1>

<%= simple_form_for @event do |f| %>
  <div class="form-group">
    <%= f.label :title, "Event Title" %>
    <%= f.input :title, required: true, placeholder: "Enter event title" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Event Description" %>
    <%= f.input :description, as: :text, required: true, placeholder: "Describe your event" %>
  </div>

  <div class="form-group">
    <%= f.label :date_time, "Event Date & Time" %>
    <%= f.input :date_time, as: :datetime_local, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :venue_id, "Select a Venue" %>
    <%= f.collection_select :venue_id, User.venue, :id, :user_name, prompt: "Choose a venue", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :photo, "Event Image (Optional)" %>
    <%= f.input :photo, as: :file %>
  </div>

  <%= f.submit "Create Event", class: "btn btn-primary" %>
<% end %>
